<div class="row">
  <div class="col-xs-12 block text-center">
  <h2>Photos</h2>

  <p>
    Here are our latest photos:
  </p>

  <div class="row photos-row">
    <% @images.each_slice(2) do |images| %>
      <% images.each do |image| %>
        <div class="col-xs-12 col-md-6 text-center bottom10 top10">
          <%= image_tag "photos/#{image}" %>
        </div>
      <% end %>
    <% end %>
  </div>

  </div>
</div>
